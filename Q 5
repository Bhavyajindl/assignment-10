#include <iostream>
#include <unordered_set>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int val) : data(val), next(NULL) {}
};

bool hasLoop(Node* head) {
    unordered_set<Node*> visited;

    Node* temp = head;
    while (temp != NULL) {
        if (visited.count(temp))  // address already seen
            return true;
        visited.insert(temp);
        temp = temp->next;
    }
    return false;
}

int main() {
    // Creating nodes
    Node* n1 = new Node(1);
    Node* n2 = new Node(2);
    Node* n3 = new Node(3);
    Node* n4 = new Node(4);

    // Making the linked list: 1 → 2 → 3 → 4 → 2
    n1->next = n2;
    n2->next = n3;
    n3->next = n4;
    n4->next = n2;  // loop here

    cout << (hasLoop(n1) ? "true" : "false");
}
